{
  "name": "python-node-cuda-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "runArgs": [
    "--gpus=all",
    "--shm-size=1024g"
  ],

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "docker.dockerPath": "docker"
      }
    }
  },

  "postCreateCommand": "uv python install 3.12 && uv venv",

  "remoteUser": "vscode"
}